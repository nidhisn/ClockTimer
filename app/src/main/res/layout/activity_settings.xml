<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/setlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgClr"
    tools:context=".SettingsActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:maxImageSize="50dp"
        android:outlineSpotShadowColor="@color/white"
        android:backgroundTint="@color/black"
        android:clickable="true"
        app:srcCompat="@drawable/back1"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/floatingActionButton"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="26dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="122dp"
        android:text="Change Theme"
        android:textColor="@color/white"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/transparentButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="120dp"
        android:shadowColor="@color/white"
        android:alpha="0.7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1">
        <ImageView
            android:id="@+id/fab_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/textView2"
            android:src="@drawable/bright"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="105dp"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/fab_text"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="102dp"
            android:layout_marginRight="-200dp"
            android:layout_marginBottom="488dp"
            android:layout_toLeftOf="@id/fab_image"
            android:layout_toEndOf="@+id/fab_image"
            android:text="   Light"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/transparentButton1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button"
        android:layout_marginTop="266dp"
        android:layout_marginLeft="120dp"
        android:shadowColor="@color/white"
        android:alpha="0.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transparentButton">
        <ImageView
            android:id="@+id/fab_image2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/textView2"
            android:src="@drawable/dark"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="22dp"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/fab_text2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="101dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="428dp"
            android:layout_toLeftOf="@id/fab_image"
            android:layout_toEndOf="@+id/fab_image"
            android:text="   Dark"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>