<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgClr"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#DDDCE1"
            android:layout_marginLeft="150dp"
            android:text="Timer"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/imgset"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/dots"
            app:tint="#DDDCE1"
            android:clickable="true" />

    </LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="205dp"
        android:layout_height="68dp"
        android:text="00:20:05"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.495" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="317dp"
        android:layout_height="310dp"
        android:progressDrawable="@drawable/progress_bar"
        android:progressTint="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/stop1"
            app:tint="@color/black"
            android:layout_margin="10dp"
            android:background="@drawable/fab_shadow"
            app:shapeAppearanceOverlay="@style/roundedFab">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/reset1"
            app:tint="@color/black"
            app:maxImageSize="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/fab_shadow"
            app:shapeAppearanceOverlay="@style/roundedFab">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ltMenu"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgclock"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_access_time_24"
            app:tint="#DDDCE1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgstp"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/outline_timer_24"
            android:tint="#DDDCE1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgtmr"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/hourglass"
            android:tint="@color/offblue"
            android:clickable="true" />


    </LinearLayout>


</LinearLayout>




