<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgClr"
    android:padding="16dp"
    tools:context=".TimerActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#DDDCE1"
            android:layout_marginLeft="150dp"
            android:text="Timer"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/imgset"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/dots"
            app:tint="#DDDCE1"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <NumberPicker
            android:id="@+id/numpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            style="@style/CustomNumberPickerStyle"
            android:outlineSpotShadowColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="125dp"
            android:text="H"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/numpick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            style="@style/CustomNumberPickerStyle"
            android:outlineSpotShadowColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="125dp"
            android:text="M"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/numpick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomNumberPickerStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="125dp"
            android:text="S"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/fab_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/play1"
        app:tint="@color/black"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="100dp"
        app:shapeAppearanceOverlay="@style/roundedFab"
        app:layout_constraintVertical_bias="0.795">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


    <LinearLayout
        android:id="@+id/ltMenu"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgclock"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_access_time_24"
            app:tint="#DDDCE1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgstp"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/outline_timer_24"
            android:tint="#DDDCE1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgtmr"
            android:layout_width="42dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/hourglass"
            android:tint="@color/offblue"
            android:clickable="true" />


    </LinearLayout>


</LinearLayout>