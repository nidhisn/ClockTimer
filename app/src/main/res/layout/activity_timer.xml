<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".TimerActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ltMenu"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="90dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgclock"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:src="@drawable/baseline_access_time_24"
            android:tint="@color/white"
            android:layout_marginRight="10dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/imgstp"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:src="@drawable/outline_timer_24"
            android:tint="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/imgtmr"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:src="@drawable/timer2"
            android:tint="#0D83E1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/imgset"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/dots"
            app:tint="#ffffff"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="45dp"
            android:clickable="true"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="90dp"
        android:text="Timer"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/numpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            style="@style/CustomNumberPickerStyle"
            android:outlineSpotShadowColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="125dp"
            android:text="H"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/numpick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            style="@style/CustomNumberPickerStyle"
            android:outlineSpotShadowColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="125dp"
            android:text="M"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/numpick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomNumberPickerStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="125dp"
            android:text="S"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/fab_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/play1"
        app:tint="@color/black"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="80dp"
        app:shapeAppearanceOverlay="@style/roundedFab"
        app:layout_constraintVertical_bias="0.795">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</LinearLayout>